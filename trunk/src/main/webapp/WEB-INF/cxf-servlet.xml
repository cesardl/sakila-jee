<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:core="http://cxf.apache.org/core" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:annotation-config />

	<!-- Service configuration -->
	<context:component-scan base-package="pe.com.hiper.sample.sakila.server.webservice" />

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />

	<!-- Enable message logging using the CXF logging feature -->
	<!-- <core:bus> <core:features> <core:logging /> </core:features> </core:bus> -->

	<bean id="actorWsImpl"
		class="pe.com.hiper.sample.sakila.server.webservice.impl.ActorWsImpl" />

	<bean id="staffWsImpl"
		class="pe.com.hiper.sample.sakila.server.webservice.impl.StaffWsImpl" />

	<jaxws:endpoint id="actorWs" implementor="#actorWsImpl"
		address="/ActorWS" />

	<jaxws:endpoint id="staffWs" implementor="#staffWsImpl"
		address="/StaffWS" />

</beans>
